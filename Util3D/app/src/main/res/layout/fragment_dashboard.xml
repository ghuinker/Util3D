<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_dashboard_linearLayout_root"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    tools:context="com.se319s18a9.util3d.Fragments.DashboardFragment">

    <TextView
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginBottom="128dp"
        android:layout_marginTop="64dp"
        android:text="@string/s_fragment_dashboard_textView_filesPlaceholder"
        android:textSize="24sp"/>

    <GridLayout
        android:columnCount="2"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingEnd="16dp"
        android:paddingStart="16dp">

        <Button
            android:background="@color/colorAccent"
            android:gravity="center"
            android:id="@+id/fragment_dashboard_button_createProject"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_height="150dp"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_width="0dp"
            android:text="@string/s_fragment_dashboard_button_createProject" />

        <Button
            android:background="@color/colorAccent"
            android:gravity="center"
            android:id="@+id/fragment_dashboard_button_openProject"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_height="150dp"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="0dp"
            android:layout_width="0dp"
            android:text="@string/s_fragment_dashboard_button_openProject" />

        <Button
            android:background="@color/colorAccent"
            android:gravity="center"
            android:id="@+id/fragment_dashboard_button_settings"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_height="150dp"
            android:layout_marginBottom="0dp"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="4dp"
            android:layout_width="0dp"
            android:text="@string/s_fragment_dashboard_button_settings" />

        <Button
            android:background="@color/colorAccent"
            android:gravity="center"
            android:id="@+id/fragment_dashboard_button_logout"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_height="150dp"
            android:layout_marginBottom="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_width="0dp"
            android:text="@string/s_fragment_dashboard_button_logout" />

    </GridLayout>

</LinearLayout>
