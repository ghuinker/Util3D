<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    tools:context="com.se319s18a9.util3d.LoginFragment">

    <TextView
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:paddingStart="16sp"
        android:paddingEnd="16sp"
        android:layout_width="match_parent"
        android:text="@string/s_fragment_createAccount_title"
        android:textSize="36sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_height="wrap_content"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="12" >

        <EditText
            android:hint="@string/s_fragment_createAccount_editText_hint_username"
            android:id="@+id/fragment_createAccount_editText_username"
            android:layout_height="wrap_content"
            android:layout_weight="11"
            android:layout_width="0dp"
            android:paddingEnd="8dp"
            android:paddingStart="8dp" />

        <Button
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:text="@string/s_fragment_createAccount_button_clear"/>

    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="12" >

        <EditText
            android:hint="@string/s_fragment_createAccount_editText_hint_email"
            android:id="@+id/fragment_createAccount_editText_email"
            android:inputType="textEmailAddress"
            android:layout_height="wrap_content"
            android:layout_weight="11"
            android:layout_width="0dp"
            android:paddingEnd="8dp"
            android:paddingStart="8dp" />

        <Button
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:text="@string/s_fragment_createAccount_button_clear"/>

    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="12" >

        <EditText
            android:hint="@string/s_fragment_createAccount_editText_hint_password"
            android:id="@+id/fragment_createAccount_editText_password"
            android:inputType="textPassword"
            android:layout_height="wrap_content"
            android:layout_weight="11"
            android:layout_width="0dp"
            android:paddingEnd="8dp"
            android:paddingStart="8dp" />

        <Button
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:text="@string/s_fragment_createAccount_button_clear"/>

    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="12" >

        <EditText
            android:hint="@string/s_fragment_createAccount_editText_hint_securityQuestion"
            android:id="@+id/fragment_createAccount_editText_securityQuestion"
            android:layout_height="wrap_content"
            android:layout_weight="11"
            android:layout_width="0dp"
            android:paddingEnd="8dp"
            android:paddingStart="8dp" />

        <Button
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:text="@string/s_fragment_createAccount_button_clear"/>

    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="12" >

        <EditText
            android:hint="@string/s_fragment_createAccount_editText_hint_securityAnswer"
            android:id="@+id/fragment_createAccount_editText_securityAnswer"
            android:layout_height="wrap_content"
            android:layout_weight="11"
            android:layout_width="0dp"
            android:paddingEnd="8dp"
            android:paddingStart="8dp" />

        <Button
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:text="@string/s_fragment_createAccount_button_clear"/>

    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/fragment_createAccount_button_create"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:text="@string/s_fragment_createAccount_button_create" />

        <Button
            android:id="@+id/fragment_createAccount_button_cancel"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:text="@string/s_fragment_createAccount_button_cancel" />

    </LinearLayout>

</LinearLayout>