<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    tools:context="com.se319s18a9.util3d.Fragments.LoginFragment"
    android:padding="16dp" >

    <TextView
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:paddingStart="16sp"
        android:paddingEnd="16sp"
        android:layout_width="match_parent"
        android:text="@string/s_fragment_createAccount_title"
        android:textSize="36sp"
        android:textStyle="bold" />


    <EditText
        android:hint="@string/s_fragment_createAccount_editText_hint_email"
        android:id="@+id/fragment_createAccount_editText_email"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:inputType="textEmailAddress"/>

    <EditText
        android:hint="@string/s_fragment_createAccount_editText_hint_username"
        android:id="@+id/fragment_createAccount_editText_username"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:inputType="text"/>

    <EditText
        android:hint="@string/s_fragment_createAccount_editText_hint_password"
        android:id="@+id/fragment_createAccount_editText_password"
        android:inputType="textPassword"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingEnd="8dp"
        android:paddingStart="8dp" />

    <EditText
        android:hint="@string/s_fragment_createAccount_editText_hint_repeatPassword"
        android:id="@+id/fragment_createAccount_editText_repeatPassword"
        android:inputType="textPassword"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:paddingEnd="8dp"
        android:paddingStart="8dp" />

    <LinearLayout
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingTop="16dp"
        android:weightSum="2">

        <Button
            android:background="@color/colorAccent"
            android:id="@+id/fragment_createAccount_button_create"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="@string/s_fragment_createAccount_button_create" />

        <Button
            android:background="@color/colorAccent"
            android:id="@+id/fragment_createAccount_button_cancel"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="@string/s_fragment_createAccount_button_cancel" />

    </LinearLayout>

</LinearLayout>